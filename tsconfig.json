{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"incremental": false,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["es2017", "dom"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"skipLibCheck": true,
		"target": "es5"
	},
	"include": ["src/**/*", ".storybook"]
}
